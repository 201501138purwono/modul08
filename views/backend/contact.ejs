<%- include ../component/admin/header_admin.ejs %>
  <%- include ../component/admin/sidebar.ejs %>
    <%- include ../component/admin/navigation.ejs %>
      <%- include ../component/admin/breadcumbs.ejs %>
        <%- include icon_stats.ejs %>

          <!-- Example DataTables Card-->
          <div class="card mb-3">
            <div class="card-header">
              <i class="fa fa-table"></i> Data Kontak Masuk</div>
            <div class="card-body">

              <div class="table-responsive">

                <% if(contacts.length>0) { %>
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Pesan</th>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Pesan</th>
                        <th>Aksi</th>
                      </tr>
                    </tfoot>
                    <tbody>
                      <% for(var i=0; i<contacts.length;i++) { %>
                        <tr>

                          <td>
                            <%= contacts[i].firstname%>
                          </td>
                          <td>
                            <%= contacts[i].lastname%>
                          </td>
                          <td>
                            <%= contacts[i].email%>
                          </td>
                          <td>
                            <%= contacts[i].phone%>
                          </td>
                          <td>
                            <%= contacts[i].pesan%>
                          </td>
                          <td>
                            <a href="mailto:<%= contacts[i].email%>">Balas</a>
                          </td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
                  <% } else { %>
                    <div>No member found.</div>
                    <% } %>
              </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
          </div>
          </div>
          </div>
          <!-- /.container-fluid-->

          <%- include ../component/admin/footer.ejs %>
